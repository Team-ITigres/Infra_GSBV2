services:
  mariadb:
    image: mariadb:{{ mariadb_version | default('latest') }}
    container_name: {{ mariadb_container_name | default('mariadb') }}
    environment:
      MYSQL_ROOT_PASSWORD: {{ mariadb_root_password | default('rootpassword') }}
      MYSQL_DATABASE: {{ mariadb_database | default('glpi') }}
      MYSQL_USER: {{ mariadb_user | default('glpi') }}
      MYSQL_PASSWORD: {{ mariadb_password | default('glpipassword') }}
    volumes:
      - mariadb-data:/var/lib/mysql
      - ./dump:/docker-entrypoint-initdb.d:ro
    networks:
      - glpi-internal
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-p{{ mariadb_root_password }}"]
      interval: 10s
      timeout: 5s
      retries: 5

  glpi:
    image: glpi/glpi:{{ glpi_version | default('latest') }}
    container_name: {{ glpi_container_name | default('glpi') }}
    environment:
      # Configuration de la base de données
      GLPI_DB_HOST: {{ glpi_db_host | default('mariadb') }}
      GLPI_DB_NAME: {{ glpi_db_name | default('glpi') }}
      GLPI_DB_USER: {{ glpi_db_user | default('glpi') }}
      GLPI_DB_PASSWORD: {{ glpi_db_password | default('glpipassword') }}

      # Mode installation/update automatique
      GLPI_INSTALL_PLUGINS: ""

      # Timezone
      TZ: Europe/Paris
    volumes:
      # Persistance des fichiers importants sur /var/glpi (utilisé par l'image officielle)
      - glpi-files:/var/glpi/files
      - glpi-config:/var/glpi/config
      - glpi-marketplace:/var/glpi/marketplace
    ports:
      - "80:80"
    networks:
      - glpi-internal
      - glpi-external
    depends_on:
      mariadb:
        condition: service_healthy
    restart: unless-stopped

volumes:
  mariadb-data:
  glpi-files:
  glpi-config:
  glpi-marketplace:

networks:
  glpi-internal:
    driver: bridge
    internal: true
  glpi-external:
    driver: bridge